---
import { Image } from '@astrojs/image/components';

import CreditCard from '@images/payment-icons/carte-bancaire.png';
import Cash from '@images/payment-icons/monnaie.png';
import ApplePay from '@images/payment-icons/apple-pay.png';
import GooglePay from '@images/payment-icons/google-pay.svg';
---

<div class='bg-[#f9feff] py-24 sm:py-32'>
    <div class='mx-auto max-w-7xl px-6 lg:px-8'>
        <h2 class='text-center text-lg font-semibold leading-8 text-gray-900'>
            Moyens de paiement acceptés
        </h2>
        <div
            class='mx-auto mt-10 grid max-w-lg grid-cols-4 items-center gap-x-8 gap-y-10 sm:max-w-xl sm:grid-cols-2 sm:gap-x-10 lg:mx-0 lg:max-w-none lg:grid-cols-4'
        >
            <Image
                src={CreditCard}
                alt='Carte bancaise'
                width={100}
                height={100}
            />
            <Image src={Cash} alt='Espèces' width={100} height={100} />
            <Image src={ApplePay} alt='Apple Pay' width={100} height={100} />
            <Image src={GooglePay} alt='Google Pay' width={100} height={100} />
        </div>
    </div>
</div>
